<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:visibility="visible"
    android:background="?attr/colorSecondary"
    android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="?attr/colorSecondary"
            android:orientation="horizontal">
            <Button
                android:id="@+id/backtoMain"
                android:background="@android:color/transparent"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:backgroundTint="?attr/colorSecondary"
                android:text=""
                android:visibility="visible"
                app:icon="@drawable/ic_back_arrow_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="?attr/colorOnSecondary"
                tools:visibility="visible" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="start|center_vertical"
                android:fontFamily="@font/ys_display_medium"
                android:letterSpacing="0"
                android:paddingStart="12dp"
                android:gravity="center_vertical"
                android:text="@string/button_settings"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="22sp" />
        </LinearLayout>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchDayNight"
        style="@style/TextView16sp"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="24dp"
        android:background="?attr/colorSecondary"
        android:paddingVertical="20dp"
        android:paddingStart="@dimen/margin_medium"
        android:paddingEnd="6dp"
        android:text="@string/choose_theme"
        app:thumbTint="@color/switchthumb_color"
        app:switchMinWidth="32dp"
        app:trackTint="@color/switchtrack_color" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="?attr/colorSecondary">

        <TextView
            style="@style/TextView16sp"
            android:paddingStart="@dimen/margin_medium"
            android:text="@string/shareIt"/>

        <Button
            android:id="@+id/sharingButton"
            android:background="@android:color/transparent"
            style="@style/InvisibleButton56x40OnSettings"
            tools:visibility="visible" />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_share_this_24"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="?attr/colorSecondary">

        <TextView
            style="@style/TextView16sp"
            android:paddingStart="@dimen/margin_medium"
            android:text="@string/needSupport"/>
        <Button
            android:id="@+id/callSupportButton"
            android:background="@android:color/transparent"
            style="@style/InvisibleButton56x40OnSettings"
            tools:visibility="visible" />
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_call_support_24"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="?attr/colorSecondary">

            <TextView
                style="@style/TextView16sp"
                android:paddingStart="@dimen/margin_medium"
                android:text="@string/user_agreement"/>

            <Button
                android:id="@+id/userAgreementButton"
                android:background="@android:color/transparent"
                style="@style/InvisibleButton56x40OnSettings"
                tools:visibility="visible" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_right_angle_bracket_24" />
        </FrameLayout>
</LinearLayout>