<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/media_lib"
    tools:context=".medialib.ui.MediaLibActivity"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSecondary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="304dp"
            android:layout_height="56dp"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="?attr/colorSecondary"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fromSearchBackToMain"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:background="@android:color/transparent"
                android:backgroundTint="?attr/colorSecondary"
                android:text=""
                android:visibility="visible"
                app:icon="@drawable/ic_back_arrow_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="?attr/colorOnSecondary"
                tools:visibility="visible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="start|center_vertical"
                android:fontFamily="@font/ys_display_medium"
                android:gravity="center_vertical"
                android:letterSpacing="0"
                android:paddingStart="12dp"
                android:text="@string/Mediateka"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="22sp" />
        </LinearLayout>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSecondary"
            app:tabTextColor="?attr/colorOnSecondary"
            app:tabMode="fixed"
            app:tabIndicatorColor="?attr/colorOnSecondary"
            app:tabIndicatorFullWidth="false"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</FrameLayout>