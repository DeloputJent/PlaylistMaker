<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/noPlayListMessage"
        android:visibility="visible">

    <Button
        android:id="@+id/ButtonAddNewPlayList"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:backgroundTint="?attr/colorOnSecondary"
        android:fontFamily="@font/ys_display_medium"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:letterSpacing="0"
        android:text="@string/New_playlist"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="?attr/colorSecondary"
        android:textSize="14sp"
        app:cornerRadius="54dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="106dp"
        android:scaleType="center"
        android:src="@drawable/ic_nothing_found_120"
        android:contentDescription="@string/nothing_found"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="242dp"
        android:fontFamily="@font/ys_display_medium"
        android:letterSpacing="0"
        android:text="@string/You_didnt_create_any_playlist"
        android:textAlignment="center"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="19sp"/>
    </FrameLayout>
</FrameLayout>