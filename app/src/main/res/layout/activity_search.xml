<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search"
    tools:context=".SearchActivity"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSecondary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="304dp"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="?attr/colorSecondary"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fromSearchBackToMain"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:background="@android:color/transparent"
                android:backgroundTint="?attr/colorSecondary"
                android:text=""
                android:visibility="visible"
                app:icon="@drawable/ic_back_arrow_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="?attr/colorOnSecondary"
                tools:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="start|center_vertical"
                android:fontFamily="@font/ys_display_medium"
                android:gravity="center_vertical"
                android:letterSpacing="0"
                android:paddingStart="12dp"
                android:text="@string/search_here"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="22sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_border">

            <EditText
                android:id="@+id/inputSearch"
                style="@style/GreyText16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="8.5dp"
                android:background="@null"
                android:drawableStart="@drawable/ic_search_16"
                android:drawablePadding="8dp"
                android:focusableInTouchMode="true"
                android:hint="@string/search_here"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:lines="1"
                android:maxLength="15"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/ic_cursor" />

            <ImageView
                android:id="@+id/clearSearchSign"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical|end"
                android:scaleType="center"
                android:src="@drawable/ic_close_sign_16"
                android:visibility="gone" />
        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/foundedTracksList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/YP_Black"
            android:textAlignment="viewStart"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <LinearLayout
            android:id="@+id/historyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSecondary"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/YouSearchedFor"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/ys_display_medium"
                android:gravity="center_vertical|center_horizontal"
                android:letterSpacing="0"
                android:text="@string/You_searched_for"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="19sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/TracksSearchHistory"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/YP_Black"
                android:textAlignment="viewStart"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            <Button
                android:id="@+id/clearHistoryButton"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:backgroundTint="?attr/colorOnSecondary"
                android:fontFamily="@font/ys_display_medium"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:letterSpacing="0"
                android:text="@string/Clear_history"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="?attr/colorSecondary"
                android:textSize="14sp"
                app:cornerRadius="54dp"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/errorSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="210dp"
        android:scaleType="center"
        android:src="@drawable/ic_no_connection_120"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/searchProblemMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="346dp"
        android:fontFamily="@font/ys_display_medium"
        android:letterSpacing="0"
        android:text="@string/problem_with_connection"
        android:textAlignment="center"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="19sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/refreshThisSearchButton"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="458dp"
        android:backgroundTint="?attr/colorOnSecondary"
        android:fontFamily="@font/ys_display_medium"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:letterSpacing="0"
        android:text="@string/refresh_search_button"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="?attr/colorSecondary"
        android:textSize="14sp"
        app:cornerRadius="54dp"
        android:visibility="gone"/>
</FrameLayout>
